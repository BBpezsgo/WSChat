<div class="message" id="message-{{ID}}">
    <div class="message-header">
        <img title="Icon" src="/img/phone2.png" width=32 height=32 class="avatar">
        <span class="username">Voice Call</span>
        <span title="Time" class="time">{{time time}}</span>
        <button onclick="DeleteMessage('{{ID}}')" title="Delete Message">
            <img src="/img/bin.png" alt="Delete Message" width=24 height=24>
        </button>
    </div>
    <div class="message-body">
        {{#if sender}}
            <img title="Avatar" src="/img/user.png" width=32 height=32 class="avatar" style="position: relative; top: 4px;"> <span class="username" title="User Name">{{sender.name}}</span> started a voice call
        {{/if}}
        {{#if callID}}
        <div style="margin-top: 8px;">
            <button onclick="JoinCall('{{callID}}')">Join Call</button>
        </div>
        {{/if}}
    </div>
</div>